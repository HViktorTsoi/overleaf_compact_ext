{
    "manifest_version": 3,
    "name": "Overleaf Compact Layout Plugin",
    "version": "1.0",
    "description": "Toggle compact layout mode for Overleaf editor",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "*://*.overleaf.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.overleaf.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_end"
      }
    ]
  }